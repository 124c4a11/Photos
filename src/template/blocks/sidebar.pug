aside.sidebar
  button(type="button" title="меню").sidebar__toggle.hamburger
    span.hamburger__item

  .sidebar__content
    .sidebar__user.user.user_nowrap.user_hidden
      .user__avatar.avatar
        img.avatar__img(src="assets/img/jane.jpg" alt="Jane Doe")
      h1.user__name Jane Doe
      .user__info
        p Фотограф, дизайнер, иллюстратор

    nav.sidebar__menu.main-menu.main-menu_compact
      ul.main-menu__list
        -
          var items = [
            {
              title: 'Портфолио',
              iconClass: 'icon-basic-case',
              href: 'index.html'
            },{
              title: 'Обо мне',
              iconClass: 'icon-basic-postcard',
              href: 'about.html'
            },{
              title: 'Контакты',
              iconClass: 'icon-basic-geolocalize-05',
              href: 'contacts.html'
            }
          ];

        each item in items
          li.main-menu__item
            a.main-menu__link(href= item.href title=`${item.title}`)
              span.main-menu__link-icon(class= item.iconClass)
              span.main-menu__link-text= item.title